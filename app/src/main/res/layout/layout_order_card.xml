<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp10"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/dp5">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_const"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10"
        android:paddingBottom="@dimen/dp4"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/order_image_one"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="@dimen/dp10"
            android:scaleType="fitCenter"
            android:src="@drawable/login_background"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="10dp">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp20"
            app:layout_constraintLeft_toRightOf="@id/order_image_one">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_20"
                    android:text="订单号"
                    android:textColor="@color/colorDark">

                </TextView>

                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/text_size_20"
                    android:text="12"
                    android:paddingLeft="@dimen/dp20">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/order_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/text_size_20"
                    android:text="2020/2/3 22:23:23"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品名称"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/dp20"
                    android:paddingTop="@dimen/dp10"
                    tools:ignore="MissingConstraints">

                </TextView>

                <TextView
                    android:id="@+id/order_good_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/text_size_20"
                    android:text="名称"
                    android:paddingLeft="@dimen/dp20">

                </TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_good_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/dp20">

                </TextView>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:paddingLeft="@dimen/dp10"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/dp20"
                    >

                </TextView>

                <TextView
                    android:id="@+id/order_good_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:paddingLeft="@dimen/dp10"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/dp20">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_20"
                    android:text="总价"
                    android:paddingTop="@dimen/dp10"
                    android:textColor="@color/colorDark">

                </TextView>

                <TextView
                    android:id="@+id/order_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/text_size_20"
                    android:text="12"
                    android:paddingLeft="@dimen/dp20"
                    android:paddingTop="@dimen/dp10">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_20"
                    android:text="元"
                    android:paddingTop="@dimen/dp10"
                    android:paddingLeft="@dimen/dp20"
                    android:textColor="@color/colorDark">

                </TextView>


            </LinearLayout>



        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout

        android:paddingTop="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/dp20"
                android:text="快递单号">

            </TextView>

            <TextView
                android:id="@+id/order_delivery_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/dp20"
                android:text="12345678956232565455">

            </TextView>

        </LinearLayout>


        <Button
            android:id="@+id/order_delivery_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="20dp"
            android:text="确认收货"
            android:textSize="19sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_selector"/>

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已签收"
            android:textSize="@dimen/dp20"
            android:textColor="@color/colorDark"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:visibility="gone"></TextView>

    </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp2"
            android:background="@color/darkOrange">

        </ImageView>
    </LinearLayout>





</androidx.cardview.widget.CardView>