<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.OrderDetailActivity">

    <ImageView
        android:id="@+id/detail_image"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"

        android:scaleType="fitXY"
        android:src="@drawable/login_background">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp20"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorDark"
                android:layout_marginLeft="50dp"
                android:text="订单号">

            </TextView>

            <TextView
                android:id="@+id/detail_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp20"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorDark"
                android:layout_marginLeft="14dp"
                android:text="123456856954568">

            </TextView>

        </LinearLayout>
        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猫粮名称"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="@dimen/dp14"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/dp20">

        </TextView>
        <TextView
            android:id="@+id/detail_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020年4月20日19点29分"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="@dimen/dp14"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/dp20">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp20"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorDark"
                android:layout_marginLeft="141dp"
                android:text="17">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp20"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorDark"
                android:layout_marginLeft="14dp"
                android:text="X">

            </TextView>

            <TextView
                android:id="@+id/detail_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp20"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorDark"
                android:layout_marginLeft="14dp"
                android:text="2">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp20"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorDark"
                android:layout_marginLeft="141dp"
                android:text="总价">

            </TextView>

            <TextView
                android:id="@+id/detail_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp20"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorDark"
                android:layout_marginLeft="14dp"
                android:text="32">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp20"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorDark"
                android:layout_marginLeft="14dp"
                android:text="元">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="110dp"
                android:text="店铺"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/dp20">

            </TextView>

            <TextView
                android:id="@+id/detail_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp20"
                android:gravity="center"
                android:textColor="@color/colorDark"
                android:layout_marginLeft="14dp"
                android:text="店铺名称">

            </TextView>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp20"
                android:gravity="center"
                android:textColor="@color/colorDark"
                android:layout_marginLeft="25dp"
                android:text="收获信息">

            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/detail_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp20"
                        android:gravity="center"
                        android:textColor="@color/colorDark"
                        android:layout_marginLeft="14dp"
                        android:text="窝里横"> </TextView>
                    <TextView
                        android:id="@+id/detail_user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp20"
                        android:gravity="center"
                        android:textColor="@color/colorDark"
                        android:layout_marginLeft="14dp"
                        android:text="13262576795"> </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/detail_user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp20"
                    android:gravity="center"
                    android:textColor="@color/colorDark"
                    android:layout_marginLeft="14dp"
                    android:text="详细地址"> </TextView>
            </LinearLayout>


        </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="11dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp20"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="50dp"
            android:text="快递单号">

        </TextView>

        <TextView
            android:id="@+id/detail_delivery_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp20"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="14dp"
            android:text="123456856954568">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="11dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp20"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="50dp"
            android:text="订单状态">

        </TextView>

        <TextView
            android:id="@+id/detail_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp20"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="14dp"
            android:text="123456856954568">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="11dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp20"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="50dp"
            android:text="收获时间">

        </TextView>

        <TextView
            android:id="@+id/detail_dead_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp20"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorDark"
            android:layout_marginLeft="14dp"
            android:text="123456856954568">

        </TextView>

    </LinearLayout>

    </LinearLayout>


