<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp10"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/dp2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp4">

        <LinearLayout
            android:id="@+id/my_linear_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/my_share_user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/user"
                >

            </ImageView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/my_share_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp5"
                    android:layout_marginLeft="@dimen/dp20"
                    android:textColor="@color/colorDark"
                    android:text="窝里哼哼"
                    android:textSize="17dp"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintLeft_toLeftOf="parent"
                    >

                </TextView>

                <TextView
                    android:id="@+id/my_share_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp5"
                    android:text="窝里哼哼"
                    android:layout_marginLeft="@dimen/dp20"
                    android:textColor="@color/colorTranslucent"
                    android:textSize="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/my_share_user_name"
                    tools:ignore="MissingConstraints"
                    >

                </TextView>
            </LinearLayout>
        </LinearLayout>





        <TextView
            android:id="@+id/my_share_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="10dp"
            android:text="窝里哼哼"
            android:textColor="@color/colorDark"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/my_linear_header"
            tools:ignore="MissingConstraints"
            >

        </TextView>

        <TextView
            android:id="@+id/my_share_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="@dimen/dp10"
            android:paddingBottom="@dimen/dp20"
            android:gravity="left"
            android:text="窝里哼哼"
            android:textColor="@color/colorTranslucent"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf ="@+id/my_share_message"
            tools:ignore="MissingConstraints"
            >

        </TextView>

        <LinearLayout
            android:id="@+id/my_share_linear"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:divider="@drawable/divider"
            android:showDividers="middle"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf ="@+id/my_share_address"
            tools:ignore="MissingConstraints"
            >

            <ImageView
                android:id="@+id/my_share_pic_one"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="#DDD2D2"
                android:scaleType="center"
                android:visibility="invisible"
                app:srcCompat="@drawable/add_pic"
                tools:ignore="MissingConstraints">

            </ImageView>

            <ImageView
                android:id="@+id/my_share_pic_second"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="#DDD2D2"
                android:scaleType="center"
                android:visibility="invisible"
                app:srcCompat="@drawable/add_pic"
                tools:ignore="MissingConstraints">

            </ImageView>

            <ImageView
                android:id="@+id/my_share_pic_three"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="center"
                android:background="#DDD2D2"
                android:visibility="invisible"
                app:srcCompat="@drawable/add_pic"
                tools:ignore="MissingConstraints">

            </ImageView>

        </LinearLayout>

        <Button
            android:id="@+id/my_share_status_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="20dp"
            android:text="确认认领"
            android:textSize="19sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_selector"
            app:layout_constraintTop_toBottomOf ="@+id/my_share_linear"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/my_share_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp20"
            app:layout_constraintTop_toBottomOf ="@+id/my_share_linear"
            android:textColor="@color/colorTranslucent"
            android:gravity="center"
            android:text="已认领"
            android:textSize="15dp"
            >

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>