<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp10"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/dp2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10"
        android:paddingBottom="@dimen/dp4">

        <ImageView
            android:id="@+id/sell_image"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:padding="@dimen/dp10"
            android:scaleType="fitCenter"
            android:src="@drawable/login_background"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="10dp">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp20"
            app:layout_constraintLeft_toRightOf="@id/sell_image">

            <TextView
                android:id="@+id/sell_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/dp20"
                android:paddingTop="@dimen/dp20"
                tools:ignore="MissingConstraints">

            </TextView>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingTop="@dimen/dp10"
             android:orientation="horizontal">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="售价"
                 android:textColor="@color/colorDark"
                 android:textSize="@dimen/dp20">

             </TextView>

             <TextView
                 android:id="@+id/sell_price"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="17"
                 android:paddingLeft="@dimen/dp10"
                 android:textColor="@color/colorDark"
                 android:textSize="@dimen/dp20"
                 >

             </TextView>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="元"
                 android:paddingLeft="@dimen/dp10"
                 android:textColor="@color/colorDark"
                 android:textSize="@dimen/dp20">

             </TextView>

         </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="17dp"
                   android:text="销量"
                   android:paddingTop="@dimen/dp10"
                   android:textColor="@color/colorHighTranslucent">

               </TextView>

               <TextView
                   android:id="@+id/sell_number"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorHighTranslucent"
                   android:textSize="17dp"
                   android:text="12"
                   android:paddingLeft="@dimen/dp20"
                   android:paddingTop="@dimen/dp10">

               </TextView>

           </LinearLayout>

            <TextView
                android:id="@+id/sell_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/dimGary"
                android:textSize="17dp"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                >

            </TextView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>